@using HKSJ.WBVV.Common.Http
@using HKSJ.WBVV.MVC.Client.GlobalVariable
@using HKSJ.WBVV.Common.Language
<link href="@ServerHelper.RootPath/Content/css/person_com.css" rel="stylesheet" />
<link href="@ServerHelper.RootPath/Content/css/5bvv_person_Account.css" rel="stylesheet" />
<link type="text/css" rel="stylesheet" href="@ServerHelper.RootPath/Content/tags/infotag.css" />

<script>
    document.title = '@GlobalMemberInfo.NickName' + "-" + Translate ("web_Client_Views_UserCenter_EditAlbum_PageTitle")+ " " + companyTitle;
    userId = "@GlobalMemberInfo.UserId";
    var menuId = 3;
</script>
<!-- 管理视频 开始  -->
<div class="person_Account_box wrap">
    <div style="margin-right:10px;" align="left" height="740px" width="250px">
        @Html.Partial("_UserMenu")
    </div>
    <div class="person_Account_right" id="divAlbumVideo">

        <div class="per_Acc_r_title"><span>@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_CreateAlbum")</span><div class="clear"></div></div>

        <div class="per_Acc_r_nr">

            <div class="per_Acc_r_nr_video_add clearfloat">

                <div class="per_zhuanj_fmian">
                    <a href="javascript:void(0);"  onclick="wm_albumEntity.openDialog(this);" class="big-link" data-reveal-id="myModal"><img id="imgCover" src="@ServerHelper.RootPath/Content/images/icon_img/5bvv_img_mo.png" ><div class="per_zhuanj_fmian_tishi">@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_EditCover")</div></a>
                </div>

                <div class="per_nr_zhuanj_right">

                    <div class="per_n_zhuanj_nr clearfloat">
                        <div class="per_n_zhuanj_nr_left"><span class="p_a_a_n_l_liaer">*</span>@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_Title")</div>
                        <div class="per_n_zhuanj_nr_right">
                            <input type="text" class="per_n_zhuanj_titile" id="txtTitle" placeholder="@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_Placeholder_TitleMaxLen")" data-bind="value: Title">
                        </div>
                    </div>

                    <div class="per_n_zhuanj_nr clearfloat">
                        <div class="per_n_zhuanj_nr_left"><span class="p_a_a_n_l_liaer"></span>@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_About")</div>
                        <div class="per_n_zhuanj_nr_right zhuanj_nr_bri">
                            <textarea class="per_n_zhuanj_nr_r_brief" id="txtAlbumRemark" placeholder="@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_Placeholder_PleaseAboutAlbum")" data-bind="value: Remark" maxlength="150"></textarea>
                            <div class="zhuanj_nr_bri_tishi" id="remarkLength">0/150</div>
                        </div>
                    </div>

                    <div class="per_n_zhuanj_nr clearfloat">
                        <div class="per_n_zhuanj_nr_left"><span class="p_a_a_n_l_liaer">*</span>@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_AlbumTags")</div>
                        <div class="info-box per_n_zhuanj_nr_right" id="tag-box"></div>
                    </div>
                </div>

            </div>

            <div class="per_ann clearfloat">
                <a href="javascript:void(0);" data-bind="click: cancel">@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_CancelButton")</a><a class="sure" href="javascript:void(0)" data-bind="click: confirm">@LanguageUtil.Translate("web_Client_Views_UserCenter_EditAlbum_ConfirmButton")</a>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>
@Html.Partial("_CoverCropper")
<script src="@ServerHelper.RootPath/Content/js/common.js"></script>
<script src="@ServerHelper.RootPath/Content/tags/infotag.js" type="text/javascript"></script>
<script src="@ServerHelper.RootPath/Content/js/AlbumEdit.js" type="text/javascript"></script>
