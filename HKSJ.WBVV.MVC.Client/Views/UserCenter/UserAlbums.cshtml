@using HKSJ.WBVV.Common.Language
<link href="@ServerHelper.RootPath/Content/css/person_com.css" rel="stylesheet" />
<link href="@ServerHelper.RootPath/Content/css/5bvv_person_Account.css" rel="stylesheet" />
<link type="text/css" rel="stylesheet" href="@ServerHelper.RootPath/Content/css/account.css" />
<link type="text/css" rel="stylesheet" href="@ServerHelper.RootPath/Content/css/paging.css" />
<link href="@ServerHelper.RootPath/Content/css/playease.css" type="text/css" rel="stylesheet" />
<script src="@ServerHelper.RootPath/Content/pager/jquery.pager.js"></script>
<script>
    document.title = '@GlobalMemberInfo.NickName' + "-" + Translate("web_Client_Views_UserCenter_UserAlbums_Title") + " " + companyTitle;
    userId = "@GlobalMemberInfo.UserId";
    var menuId = 3;
</script>

<div class="person_Account_box wrap">
    <div style="margin-right:10px;" align="left" height="740px" width="250px">
        @Html.Partial("_UserMenu")
    </div>
    <div class="person_Account_right" id="divUserAlbums">
        <div class="per_Acc_r_title">
            <a class="per_vip_add_video" href="@ServerHelper.RootPath/UserCenter/CreateAlbum">@LanguageUtil.Translate("web_Client_Views_UserCenter_UserAlbums_CreateAblum")</a>
            <span>@(LanguageUtil.Translate("web_Client_Views_UserCenter_UserAlbums_MyAblum"))<font id="abCount">(<!--ko text:SpecialCount--><!--/ko-->)</font></span>
            <div class="clear"></div>
        </div>
        <div class="per_Acc_r_nr" loading="album">
            <div class="per_Acc_r_nr_kongbai" id="divNoneCount">
                <div class="per_a_r_nr_k_tishi">@LanguageUtil.Translate("web_Client_Views_UserCenter_UserAlbums_ShowNoCreateAnyAlbum")</div>
                <div><a class="per_vip_add_soon" href="@ServerHelper.RootPath/UserCenter/CreateAlbum">@LanguageUtil.Translate("web_Client_Views_UserCenter_UserAlbums_SpeedCreateAlbum")</a></div>
            </div>
            <div class="per_Acc_r_nr_neirong clearfloat">
                <!--ko foreach:{data:SpecialVideoList,as:'item'}-->
                <div class="per_nr_zhuanji">
                    <div class="per_nr_zhuanji_img">
                        <a href="javascript:void(0);" data-bind="click:function(){$root.AlbumDetail(item.Id)},attr:{title:item.Title}"><img data-bind="attr:{src:item.Thumbnail==''?'null':item.Thumbnail,title:item.Title}"></a>
                    </div>
                    <a href="javascript:void(0);" data-bind="click:function(){$root.AlbumDetail(item.Id)}"><div class=" per_nr_zhuanji_wz_shuz"><!--ko text:item.VideoCount--><!--/ko--></div></a>

                    <div class="per_nr_zhuanji_wz">
                        <div class="per_nr_zhuanji_biaot"><a data-bind="click:function(){$root.AlbumDetail(item.Id)},text:item.Title,attr:{title:item.Title}"></a></div>
                        <div class="per_video_bo_t_guan clearfloat"><span class="per_vid_b_t_cishu" data-bind="text:item.PlayCount"></span><span class="per_vid_b_t_xiaox"><!--ko text:item.CommentCount--><!--/ko--></span></div>
                        <div class="per_vid_b_t_time">@LanguageUtil.Translate("web_Client_Views_UserCenter_UserAlbums_CreateAlbumToTime")<!--ko text:item.CreateTime--><!--/ko--></div>
                    </div>
                </div>
                <!--/ko-->
            </div>
            <!-- 分页 begin-->
            <div class="v_fun_wz02" id="page">
                <div class="clear"></div>
            </div>
            <!-- 分页 end -->
        </div>
    </div>
    <div class="clear"></div>
</div>
<script src="@ServerHelper.RootPath/Content/js/playerease.js" type="text/javascript"></script>
