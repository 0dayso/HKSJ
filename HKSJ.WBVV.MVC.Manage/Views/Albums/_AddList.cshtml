@using HKSJ.WBVV.Common.Language 
@{
    Layout = null;
}
<div class="row-fluid">
    <table class="table table-striped table-bordered table-hover dataTable">
        <thead>
            <tr>
                <td style="width: 8px;">
                    <input type="checkbox" name="cbxData" id="cbxAll" onclick="checkAll(this)" />
                </td>
                <th>@LanguageUtil.Translate("admin_views_albums_addList_albumName")</th>    
                <th>@LanguageUtil.Translate("admin_views_albums_addList_albumIntro")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_addList_videos")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_addList_creator")</th>   
                <th>@LanguageUtil.Translate("admin_views_albums_addList_createTime")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_addList_updater")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_addList_updateTime")</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:data">
            <tr>
                <td>
                    <input type="checkbox" name="cbxList" data-bind="value:model.Id,attr:{id:'cbx'+model.Id},checked:ischeck" />
                </td>
                <td><!--ko text:model.Title--><!--/ko--></td>
                <td><textarea class="span6 m-wrap" rows="2" cols="60" style="width:100%;" readonly="readonly" data-bind="value:model.Remark"></textarea></td>
                <td><!--ko text:model.VideoCount--><!--/ko--></td>
                <td><!--ko text:model.CreateUserNick--><!--/ko--></td>
                <td><!--ko text:model.CreateTime--><!--/ko--></td>
                <td><!--ko text:model.UpdateUserNick--><!--/ko--></td>
                <td><!--ko text:model.UpdateTime--><!--/ko--></td>
            </tr>
        </tbody>
    </table>
</div>

