@using HKSJ.WBVV.Common.Language 
@{
    Layout = null;
}
<div class="row-fluid" id="divAlbumsList">
    <table class="table table-striped table-bordered table-hover dataTable">
        <thead>
            <tr>
                <td style="width: 8px;">
                    <input type="checkbox" name="cbxData" id="cbxAll" />
                </td>
                <th>@LanguageUtil.Translate("admin_views_albums_list_albumName")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_albumIntro")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_videos")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_creator")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_createTime")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_updater")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_updateTime")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_orderId")</th>
                <th>@LanguageUtil.Translate("admin_views_albums_list_operate")</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:{data:SpecialVideoList,as:'item'}">
            <tr>
                <td>
                    <input type="checkbox" name="cbxList" data-bind="value:Id,attr:{id:'cbx'+Id}" />
                </td>
                <td><!--ko text:item.Title--><!--/ko--></td>
                <td><textarea class="span6 m-wrap" rows="3" cols="60" style="width:100%;" readonly="readonly" data-bind="value:item.Remark"></textarea></td>
                <td><!--ko text:item.VideoCount--><!--/ko--></td>
                <td><!--ko text:item.CreateUserNick--><!--/ko--></td>
                <td><!--ko text:item.CreateTime--><!--/ko--></td>
                <td><!--ko text:item.UpdateUserNick--><!--/ko--></td>
                <td><!--ko text:item.UpdateTime--><!--/ko--></td>
                <td><input type="text" name="txtSortNum" data-bind="value:item.SortNum,attr:{id:item.Id}" onkeyup="this.value=this.value.replace(/\D/g,'')" onafterpaste="this.value=this.value.replace(/\D/g,'')" onpaste="this.value=this.value.replace(/\D/g,'')" onblur="this.value=this.value.replace(/\D/g,'')" /></td>
                <td>
                    <a class="btn mini red" href="javascript:void(0);" data-bind="click:function(){$root.doDelete(Id);}"><i class="icon-remove"></i>@LanguageUtil.Translate("admin_views_albums_list_delete")</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>


