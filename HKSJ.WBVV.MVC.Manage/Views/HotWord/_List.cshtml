@using HKSJ.WBVV.Common.Language
@{
    Layout = null;
}
<div class="row-fluid">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td style="width: 8px;">
                    <input type="checkbox" onclick="checkAll(this)" /></td>
                <th>@LanguageUtil.Translate("admin_Views_HotWord_list_orderID")</th>
                <th>@LanguageUtil.Translate("admin_Views_HotWord_list_hotWords")</th>
                <th>@LanguageUtil.Translate("admin_Views_HotWord_list_searchNum")</th>
                <th>@LanguageUtil.Translate("admin_Views_HotWord_list_atLastsearchTime")</th>
                <th>@LanguageUtil.Translate("admin_Views_HotWord_list_operation")</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:data">
            <tr>
                <td>
                    <input type="checkbox" data-bind="checked:ischeck" /></td>
                <td data-bind="text:index"></td>
                <td data-bind="text:model.Keyword"></td>
                <td data-bind="text:model.SearchNum"></td>
                <td data-bind="text:model.SearchTimeStr"></td>
                <td>
                    <a class="btn mini green"  data-bind="attr:{data_id:model.ID}" onclick="openedit(this)"><i class="icon-edit"></i>@LanguageUtil.Translate("admin_Views_HotWord_list_update")</a>
                    <a class="btn mini red" data-bind="click: function () { delKeyWord(model.ID) }"><i class="icon-remove"></i>@LanguageUtil.Translate("admin_Views_HotWord_list_delete")</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

